package {{ package }};

import net.minecraft.core.BlockPos;
import net.minecraft.world.entity.Entity;
import net.minecraft.world.entity.LivingEntity;
import net.minecraft.world.level.Level;
import net.minecraft.world.level.block.Block;
import net.minecraft.world.level.block.state.BlockBehaviour;
import net.minecraft.world.level.block.state.BlockState;

public class {{ class_name }} extends Block {
    
    public {{ class_name }}(BlockBehaviour.Properties properties) {
        super(properties);
    }
{% if behavior_methods %}
{% for method in behavior_methods %}
{% if method.name == 'stepOn' %}
    
    @Override
    public void stepOn(Level level, BlockPos pos, BlockState state, Entity entity) {
        if (entity instanceof LivingEntity && entity.getDeltaMovement().y < 0) {
            entity.setDeltaMovement(entity.getDeltaMovement().x, {{ method.bounce_strength }}, entity.getDeltaMovement().z);
        }
        super.stepOn(level, pos, state, entity);
    }
{% elif method.name == 'fallOn' %}
    
    @Override
    public void fallOn(Level level, BlockState state, BlockPos pos, Entity entity, float fallDistance) {
        entity.causeFallDamage(fallDistance, {{ method.fall_damage_multiplier }}f, level.damageSources().fall());
    }
{% endif %}
{% endfor %}
{% else %}
    
    // TODO: Implement custom block behavior here
{% endif %}
}
